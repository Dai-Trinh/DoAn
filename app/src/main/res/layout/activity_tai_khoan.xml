<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaiKhoan"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="TÀI KHOẢN"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/thongtintaikhoan"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Thông tin tài khoản"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/lichsumuahang"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Lịch sử mua hàng"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bản đồ"
            android:id="@+id/taikhoan_bando"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:padding="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới thiệu"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/taikhoan_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:padding="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/imagebutton_home_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icons8_home_48"
            android:layout_marginRight="40dp"/>


        <ImageView
            android:id="@+id/imagebutton_store_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_store"
            android:layout_weight="1"
            android:layout_marginRight="40dp"/>

        <ImageView
            android:id="@+id/imagebutton_chat_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_chat_room"
            android:layout_weight="1"
            android:layout_marginRight="40dp"/>

        <ImageView
            android:id="@+id/imagebutton_user_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icons8_user"
            android:background="@android:color/holo_orange_dark"/>

    </LinearLayout>

</FrameLayout>