<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietDoAnActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_dark"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/chitiedoan_trove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_back_50"/>

                <ImageView
                    android:id="@+id/imageview_timkiem_ct"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/icon_search"
                    android:layout_gravity="right"
                    />
            </FrameLayout>

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_anhdoan"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/text_tenmonan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên món ăn"
                    android:textSize="27dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/text_giamonan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/text_diachimonan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/text_tinhtrang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tình trạng"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/chitiet_themgiohang"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Thêm giỏ hàng"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:gravity="center"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/bovien"
                            />

                        <TextView
                            android:id="@+id/chitiet_yeuthich"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Yêu thích"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:padding="20dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:gravity="center"
                            android:background="@drawable/bovien"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/chitiet_muangay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MUA NGAY"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:padding="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bovien"
                        />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm liên quan"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_sanphamlienquan"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>